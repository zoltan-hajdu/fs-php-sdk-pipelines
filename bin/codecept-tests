COVERAGE_THRESHOLD=70

if [ "$1" != "" ]; then
   UNIT_COVERAGE_THRESHOLD=$1
fi

set -e

echo "==============================="
echo "      Codeception PHP Tests"
echo "==============================="
vendor/bin/codecept run unit --steps --ext DotReporter --coverage --coverage-html --coverage-xml -c vendor/zoltan-hajdu/fs-php-sdk-pipelines/static/codeception/codeception.yml

if [[ -z "${COVERAGE_THRESHOLD}" ]]; then
  COVERAGE_THRESHOLD=70

echo "==============================="
echo "            Coverage"
echo "==============================="
vendor/bin/coverage-check clover.xml $COVERAGE_THRESHOLD