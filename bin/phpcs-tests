PHPCS_SEVERITY=1

if [ "$1" != "" ]; then
   PHPCS_SEVERITY=$1
fi
set -e

echo "==============================="
echo "      PHP CodeSniffer Tests"
echo "==============================="
vendor/bin/phpcs --config-set installed_paths ../../../static/phpcs,../../phpcompatibility/php-compatibility/PHPCompatibility
vendor/bin/phpcs -s --colors --standard=PSR2 --extensions=php --severity=$PHPCS_SEVERITY --ignore=*/vendor/* app tests/api tests/integration
