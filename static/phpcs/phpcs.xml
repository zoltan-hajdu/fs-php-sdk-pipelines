<?xml version="1.0"?>

<ruleset name="PHP SDK PHPCS rule set">
    <description>PHP SDK coding standard.</description>

    <rule ref="PSR1.Classes.ClassDeclaration.MultipleClasses">
        <exclude-pattern>*/src/*</exclude-pattern>
    </rule>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>*/src/*</exclude-pattern>
        <exclude-pattern>*/tests/Integration/*</exclude-pattern>
    </rule>

    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <rule ref="Squiz.Classes.ValidClassName.NotCamelCap">
        <exclude-pattern>*/src/*</exclude-pattern>
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <!-- Include the whole PSR-1 standard -->
    <rule ref="PSR1">
        <exclude name="PSR1.Classes.ClassDeclaration.MultipleClasses" />
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps" />
        <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>
        <exclude name="Generic.NamingConventions.CamelCapsFunctionName.Invalid" />
    </rule>
    <!-- Include the whole PSR-2 standard -->
    <rule ref="PSR2">
        <exclude name="PSR1.Classes.ClassDeclaration.MultipleClasses" />
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps" />
        <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps"/>
        <exclude name="Generic.NamingConventions.CamelCapsFunctionName.Invalid" />
    </rule>

    <!-- TODO: Add own rules -->
</ruleset>
